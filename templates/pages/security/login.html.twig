{% extends 'base.html.twig' %}

{% block title %}Connexion à votre compte{% endblock %}

{% block body %}
    <div class="form-container">
        <h2 class="h2-title">Connexion à votre compte</h2>

         {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{ message }}
    </div>
    {% endfor %}

        {% if error %}
            <div class="alert alert-danger mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
                <form action= "{{ path('security.login')}}" method="post">
                
                    <div class="form-group">
                        <label for="username" class="form-label mt-4">Adresse email</label>
                        <input type="email" class="form-control" id="username"  name="_username" placeholder="exemple@gmail.com" value="{{ last_username }}"
                        data-dashlane-rid="43b9769b2df63aee" data-kwimpalastatus="alive" data-kwimpalaid="1675090842450-1" data-form-type="email">
                         <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                         <label for="password" class="form-label mt-4">Mot de passe</label>
                         <input type="password" class="form-control" id="password" name="_password" placeholder="********" data-dashlane-rid="f31a087270b289c4" data-kwimpalastatus="alive" data-kwimpalaid="1675090842450-2" data-form-type="password">
                     </div>

                
                    <button type="submit" class="btn btn-login-page mt-4">Se connecter</button>
                     <a href="{{ path('security.registration') }}" class="btn btn-login-page mt-4">Créer un compte</a>
                </form>
            </div>

{% endblock %}
 